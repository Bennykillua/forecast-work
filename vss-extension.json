{
  "manifestVersion": 1,
  "id": "ado-kanban-forecasting",
  "version": "1.0.0",
  "name": "ado-kanban-forecasting",
  "description": "Azure DevOps dashboard widget to forecast work items using the Monte Carlo method.",
  "publisher": "andrew-codes",
  "categories": ["Azure Boards"],
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "icons": {
    "default": "img/logo.png"
  },
  "contributions": [
    {
      "id": "HelloWorldWidget",
      "type": "ms.vss-dashboards-web.widget",
      "targets": ["ms.vss-dashboards-web.widget-catalog"],
      "properties": {
        "name": "Hello World Widget",
        "description": "My first widget",
        "catalogIconUrl": "img/CatalogIcon.png",
        "previewImageUrl": "img/preview.png",
        "uri": "dist/kanban-forecasting.html",
        "supportedSizes": [
          {
            "rowSpan": 1,
            "columnSpan": 2
          }
        ],
        "supportedScopes": ["project_team"]
      }
    }
  ],
  "files": [
    {
      "path": "node_modules/vss-web-extension-sdk/lib/VSS.SDK.min.js",
      "addressable": true,
      "packagePath": "lib"
    },
    {
      "path": "dist/kanban-forecasting.html",
      "addressable": true
    },
    {
      "path": "dist/kanban-forecasting.js",
      "addressable": true
    },
    {
      "path": "dist/img",
      "addressable": true
    }
  ],
  "scopes": ["vso.work"]
}
